<div class= "container">
  <div class="page-header">
    <h1><%=@survey.title%> <small><%=@survey.description%></small></h1>
  </div> <!-- closing individual answer div   -->

<%if @errors%>
  <dic class="errors-wrapper">
    <span>Your answers could not be saved: </span>
    <ul class="errors">
      <% @errors.each do |error| %>
      <li class="error"><%errors%> </li>
      <%end%>
    </ul>
  </div>
<%end%>
<div class="question-answer container">
  <form  id = "answer_survey" action = <%= "/users/#{session[:user_id]}/survey/#{@survey.id}/take" %> method = "POST">
  <ol class= "question-list">
    <% @survey.questions.each do |question| %>
    <li class "question-text"><%= question.question %> </li>
        <% question.answers.each do |answer| %>
          <input type ="radio" class = "answer-button" name = <%= "#{question.id}"%> value = <%= "#{answer.answer}" %>
        <%end%>
    <%end%>
    <input type="submit" value="Log In!!">
  </form>
</div>  <!-- closing question-answer container  -->
