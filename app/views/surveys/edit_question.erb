<div class='container'>
	<div class="col-sm-9 page-header">
	  <h1>Edit this Question </h1>
	</div>
	<div class="col-sm-3"><img class="gorilla-img" src="http://www.clipartlord.com/wp-content/uploads/2016/01/gorilla5.png">
	</div>

	<div class="col-sm-6">
	  <div class=" panel-default">
	    <div class="panel-heading">Your Question: <%=@question.question%></div>
	    <div class="panel-body">
			<form action = "/users/<%=session[:user_id]%>/surveys/<%=@survey.id%>/questions/<%=@question.id%>" method="POST">
				<input type = "hidden" name="_method" value="put"
			  <fieldset class="form-group">
		        <label for="title">New Question:</label>
			    <input class="form-control" type= "text" name= "question">
			  </fieldset>
			 <fieldset class="form-group">
		        <label for="title">New Option 1:</label>
			    <input class="form-control" type= "text" name= "answer1">
			  </fieldset>
			 <fieldset class="form-group">
		        <label for="title">New Option 2:</label>
			    <input class="form-control" type= "text" name= "answer2">
			  </fieldset>
			  <fieldset class="form-group">
		        <label for="title">New Option 3:</label>
			    <input class="form-control" type= "text" name= "answer3">
			  </fieldset>
			  <fieldset class="form-group">
		        <label for="title">New Option 4:</label>
			    <input class="form-control" type= "text" name= "answer4">
		      </fieldset>
			 <input type= "submit" class="btn btn-primary">
			</form>

	    </div><!-- panel body -->
	  </div><!-- panel -->
  </div><!-- col-sm-6 -->
</div><!-- container -->
